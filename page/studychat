import React, { useState, useEffect, useRef } from "react";
import { base44 } from "@/api/base44Client";
import { useNavigate } from "react-router-dom";
import { createPageUrl } from "@/utils";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { ScrollArea } from "@/components/ui/scroll-area";
import { 
  MessageCircle, Send, Plus, BookOpen, Trash2, Sparkles, 
  Brain, TrendingUp, Clock, Loader2, Menu
} from "lucide-react";
import { Badge } from "@/components/ui/badge";
import MessageBubble from "../components/chat/MessageBubble";
import { format } from "date-fns";

export default function StudyChat() {
  const navigate = useNavigate();
  const [user, setUser] = useState(null);
  const [conversations, setConversations] = useState([]);
  const [currentConversation, setCurrentConversation] = useState(null);
  const [messages, setMessages] = useState([]);
  const [inputMessage, setInputMessage] = useState("");
  const [loading, setLoading] = useState(true);
  const [sending, setSending] = useState(false);
  const [sidebarOpen, setSidebarOpen] = useState(true);
  const messagesEndRef = useRef(null);
  const unsubscribeRef = useRef(null);

  useEffect(() => {
    loadUser();
  }, []);

  useEffect(() => {
    if (currentConversation) {
      subscribeToConversation();
      // Save current conversation ID to localStorage
      localStorage.setItem('lastConversationId', currentConversation.id);
    }
    return () => {
      if (unsubscribeRef.current) {
        unsubscribeRef.current();
      }
    };
  }, [currentConversation]);

  useEffect(() => {
    scrollToBottom();
  }, [messages]);

  const scrollToBottom = () => {
    messagesEndRef.current?.scrollIntoView({ behavior: "smooth" });
  };

  const loadUser = async () => {
    try {
      const currentUser = await base44.auth.me();
      setUser(currentUser);
      await loadConversations(currentUser);
    } catch (err) {
      console.error(err);
    }
    setLoading(false);
  };

  const loadConversations = async (currentUser) => {
    try {
      const convs = await base44.entities.Conversation.filter(
        { user_email: currentUser.email, agent_name: "study_assistant" },
        "-created_date"
      );
      setConversations(convs);

      // Try to restore last active conversation
      const lastConvId = localStorage.getItem('lastConversationId');
      if (lastConvId && convs.length > 0) {
        const lastConv = convs.find(c => c.id === lastConvId);
        if (lastConv) {
          await selectConversation(lastConv);
        } else if (convs.length > 0) {
          // If last conversation not found, load the most recent one
          await selectConversation(convs[0]);
        }
      } else if (convs.length > 0) {
        // Load the most recent conversation
        await selectConversation(convs[0]);
      }
    } catch (err) {
      console.error(err);
    }
  };

  const subscribeToConversation = () => {
    if (unsubscribeRef.current) {
      unsubscribeRef.current();
    }

    unsubscribeRef.current = base44.agents.subscribeToConversation(
      currentConversation.id,
      (data) => {
        setMessages(data.messages || []);
      }
    );
  };

  const createNewConversation = async () => {
    try {
      const newConv = await base44.agents.createConversation({
        agent_name: "study_assistant",
        metadata: {
          title: "New Study Session",
          topic: "",
          user_email: user.email,
          user_name: user.full_name || user.email
        }
      });
      
      setConversations([newConv, ...conversations]);
      setCurrentConversation(newConv);
      setMessages([]);
      
      // Send initial context message to the agent
      await base44.agents.addMessage(newConv, {
        role: "user",
        content: `Hi! I'm ${user.full_name || user.email}. My email is ${user.email}. Please help me study and track my progress.`
      });
    } catch (err) {
      console.error(err);
    }
  };

  const selectConversation = async (conv) => {
    try {
      const fullConv = await base44.agents.getConversation(conv.id);
      setCurrentConversation(fullConv);
      setMessages(fullConv.messages || []);
    } catch (err) {
      console.error(err);
    }
  };

  const deleteConversation = async (convId, e) => {
    e.stopPropagation();
    try {
      await base44.entities.Conversation.delete(convId);
      setConversations(conversations.filter(c => c.id !== convId));
      if (currentConversation?.id === convId) {
        // Clear localStorage if deleting current conversation
        localStorage.removeItem('lastConversationId');
        setCurrentConversation(null);
        setMessages([]);
        // Load the next available conversation if any
        const remainingConvs = conversations.filter(c => c.id !== convId);
        if (remainingConvs.length > 0) {
          await selectConversation(remainingConvs[0]);
        }
      }
    } catch (err) {
      console.error(err);
    }
  };

  const sendMessage = async () => {
    if (!inputMessage.trim() || !currentConversation || sending) return;

    const userMessage = inputMessage.trim();
    setInputMessage("");
    setSending(true);

    try {
      await base44.agents.addMessage(currentConversation, {
        role: "user",
        content: userMessage
      });

      // Update conversation title if it's the first real message (after initial context)
      if (messages.length <= 1) {
        const title = userMessage.slice(0, 50) + (userMessage.length > 50 ? "..." : "");
        await base44.agents.updateConversation(currentConversation.id, {
          metadata: {
            ...currentConversation.metadata,
            title: title,
            last_message: userMessage
          }
        });
        // Reload conversations to update sidebar
        await loadConversations(user);
      }
    } catch (err) {
      console.error(err);
    }

    setSending(false);
  };

  const handleKeyPress = (e) => {
    if (e.key === 'Enter' && !e.shiftKey) {
      e.preventDefault();
      sendMessage();
    }
  };

  if (loading) {
    return (
      <div className="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50 flex items-center justify-center">
        <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600" />
      </div>
    );
  }

  return (
    <div className="h-screen bg-gradient-to-br from-slate-50 via-purple-50 to-indigo-50 flex overflow-hidden">
      {/* Sidebar */}
      <div className={`${sidebarOpen ? 'w-80' : 'w-0'} transition-all duration-300 bg-white border-r border-slate-200 flex flex-col overflow-hidden`}>
        <div className="p-4 border-b border-slate-200">
          <Button
            onClick={createNewConversation}
            className="w-full bg-gradient-to-r from-purple-500 to-indigo-600 hover:from-purple-600 hover:to-indigo-700"
          >
            <Plus className="w-4 h-4 mr-2" />
            New Study Session
          </Button>
        </div>

        <ScrollArea className="flex-1">
          <div className="p-4 space-y-2">
            {conversations.length === 0 ? (
              <div className="text-center py-8 text-slate-500">
                <MessageCircle className="w-12 h-12 mx-auto mb-2 opacity-50" />
                <p className="text-sm">No conversations yet</p>
              </div>
            ) : (
              conversations.map((conv) => (
                <div
                  key={conv.id}
                  onClick={() => selectConversation(conv)}
                  className={`p-3 rounded-lg cursor-pointer transition-all group ${
                    currentConversation?.id === conv.id
                      ? 'bg-gradient-to-r from-purple-100 to-indigo-100 border-2 border-purple-300'
                      : 'bg-slate-50 hover:bg-slate-100 border-2 border-transparent'
                  }`}
                >
                  <div className="flex justify-between items-start">
                    <div className="flex-1 min-w-0">
                      <h3 className="font-medium text-sm text-slate-800 truncate">
                        {conv.metadata?.title || 'Study Session'}
                      </h3>
                      <p className="text-xs text-slate-500 truncate mt-1">
                        {conv.metadata?.last_message || 'Start chatting...'}
                      </p>
                      <p className="text-xs text-slate-400 mt-1">
                        {format(new Date(conv.created_date), "MMM d, h:mm a")}
                      </p>
                    </div>
                    <Button
                      variant="ghost"
                      size="icon"
                      className="opacity-0 group-hover:opacity-100 transition-opacity h-8 w-8"
                      onClick={(e) => deleteConversation(conv.id, e)}
                    >
                      <Trash2 className="w-4 h-4 text-red-500" />
                    </Button>
                  </div>
                </div>
              ))
            )}
          </div>
        </ScrollArea>

        <div className="p-4 border-t border-slate-200 bg-slate-50">
          <div className="flex items-center gap-2 mb-2">
            <Brain className="w-5 h-5 text-purple-600" />
            <span className="font-semibold text-slate-800">Study Assistant</span>
          </div>
          <p className="text-xs text-slate-600">
            Your personal AI tutor that tracks your progress and creates personalized study plans
          </p>
        </div>
      </div>

      {/* Main Chat Area */}
      <div className="flex-1 flex flex-col min-w-0">
        {/* Header */}
        <div className="bg-white border-b border-slate-200 p-4 flex items-center gap-3 flex-shrink-0">
          <Button
            variant="ghost"
            size="icon"
            onClick={() => setSidebarOpen(!sidebarOpen)}
          >
            <Menu className="w-5 h-5" />
          </Button>
          <div className="flex-1 min-w-0">
            {currentConversation ? (
              <div>
                <h2 className="font-semibold text-slate-800 truncate">
                  {currentConversation.metadata?.title || 'Study Session'}
                </h2>
                <p className="text-xs text-slate-500">AI Study Assistant</p>
              </div>
            ) : (
              <div>
                <h2 className="font-semibold text-slate-800">Study Assistant</h2>
                <p className="text-xs text-slate-500">Start a new conversation to begin learning</p>
              </div>
            )}
          </div>
          <Badge variant="secondary" className="bg-purple-100 text-purple-700">
            <Sparkles className="w-3 h-3 mr-1" />
            AI-Powered
          </Badge>
        </div>

        {/* Messages Area */}
        {!currentConversation ? (
          <div className="flex-1 flex items-center justify-center p-8 overflow-auto">
            <div className="text-center max-w-2xl">
              <div className="w-20 h-20 bg-gradient-to-br from-purple-500 to-indigo-600 rounded-full flex items-center justify-center mx-auto mb-6">
                <Brain className="w-10 h-10 text-white" />
              </div>
              <h2 className="text-3xl font-bold text-slate-800 mb-4">
                Welcome to Your Study Assistant
              </h2>
              <p className="text-slate-600 mb-6 text-lg">
                I'm here to help you learn anything! I can:
              </p>
              <div className="grid md:grid-cols-3 gap-4 mb-8">
                <Card>
                  <CardContent className="pt-6">
                    <BookOpen className="w-8 h-8 text-blue-500 mx-auto mb-3" />
                    <h3 className="font-semibold mb-2">Explain Topics</h3>
                    <p className="text-sm text-slate-600">
                      Get clear explanations on any subject
                    </p>
                  </CardContent>
                </Card>
                <Card>
                  <CardContent className="pt-6">
                    <TrendingUp className="w-8 h-8 text-green-500 mx-auto mb-3" />
                    <h3 className="font-semibold mb-2">Track Progress</h3>
                    <p className="text-sm text-slate-600">
                      See what you've studied and your weak areas
                    </p>
                  </CardContent>
                </Card>
                <Card>
                  <CardContent className="pt-6">
                    <Clock className="w-8 h-8 text-purple-500 mx-auto mb-3" />
                    <h3 className="font-semibold mb-2">Create Plans</h3>
                    <p className="text-sm text-slate-600">
                      Get personalized study plans based on your history
                    </p>
                  </CardContent>
                </Card>
              </div>
              <Button
                onClick={createNewConversation}
                size="lg"
                className="bg-gradient-to-r from-purple-500 to-indigo-600 hover:from-purple-600 hover:to-indigo-700"
              >
                <Plus className="w-5 h-5 mr-2" />
                Start Learning Now
              </Button>
            </div>
          </div>
        ) : (
          <ScrollArea className="flex-1 p-6">
            <div className="max-w-4xl mx-auto space-y-6">
              {messages.length === 0 ? (
                <div className="text-center py-12">
                  <Sparkles className="w-16 h-16 mx-auto text-purple-300 mb-4" />
                  <p className="text-slate-500 text-lg">
                    Loading conversation...
                  </p>
                </div>
              ) : (
                messages.slice(1).map((message, index) => (
                  <MessageBubble key={index} message={message} />
                ))
              )}
              {sending && (
                <div className="flex items-center gap-3 text-slate-500">
                  <Loader2 className="w-5 h-5 animate-spin" />
                  <span className="text-sm">Assistant is thinking...</span>
                </div>
              )}
              <div ref={messagesEndRef} />
            </div>
          </ScrollArea>
        )}

        {/* Input Area */}
        {currentConversation && (
          <div className="bg-white border-t border-slate-200 p-4 flex-shrink-0">
            <div className="max-w-4xl mx-auto flex gap-3">
              <Input
                value={inputMessage}
                onChange={(e) => setInputMessage(e.target.value)}
                onKeyPress={handleKeyPress}
                placeholder="Ask anything... (Press Enter to send)"
                className="flex-1"
                disabled={sending}
              />
              <Button
                onClick={sendMessage}
                disabled={!inputMessage.trim() || sending}
                className="bg-gradient-to-r from-purple-500 to-indigo-600 hover:from-purple-600 hover:to-indigo-700"
              >
                <Send className="w-4 h-4" />
              </Button>
            </div>
          </div>
        )}
      </div>
    </div>
  );
}
